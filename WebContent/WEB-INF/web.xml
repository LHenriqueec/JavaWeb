<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>JavaWeb</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Exercicio 1: Trabalhando com JSP e Servleet -->
  <servlet>
    <servlet-name>Lista</servlet-name>
    <servlet-class>exercicio.servlet.ListaServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Gravar</servlet-name>
    <servlet-class>exercicio.servlet.GravarServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Processar</servlet-name>
    <servlet-class>exercicio.servlet.ProcessarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Lista</servlet-name>
    <url-pattern>/Lista</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Gravar</servlet-name>
    <url-pattern>/Gravar</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Processar</servlet-name>
    <url-pattern>/Processar</url-pattern>
  </servlet-mapping>
  
  <!-- Exercicio1: Utilizando Session -->
  <servlet>
    <servlet-name>Lista_2</servlet-name>
    <servlet-class>exercicio2.servlet.ListaServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Gravar2</servlet-name>
    <servlet-class>exercicio2.servlet.GravarServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Processar2</servlet-name>
    <servlet-class>exercicio2.servlet.ProcessarServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Lista_2</servlet-name>
    <url-pattern>/Lista2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Gravar2</servlet-name>
    <url-pattern>/Gravar2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Processar2</servlet-name>
    <url-pattern>/Processar2</url-pattern>
  </servlet-mapping>
  
  <!-- Exercicio3: Utilizando Filters -->
  <filter>
  	<display-name>MaitenanceFilter</display-name>
  	<filter-name>MaitenanceFilter</filter-name>
  	<filter-class>filter.MaitenanceFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>MaitenanceFilter</filter-name>
  	<url-pattern>/Exercicio3/*</url-pattern>
  </filter-mapping>
</web-app>









